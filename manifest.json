{
  "manifest_version": 2,
  "name": "Instagram Downloader",
  "description": "This extension lets you download high quality images from Instagram",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false,
    "run_at": "document_end"
  },
  "page_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "https://www.instagram.com/*",
    "declarativeContent"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["jquery-2.2.4.min.js", "content.js"],
      "run_at" : "document_end"
    }
  ],
  "web_accessible_resources": ["download_black.png", "download_white.png"]
}
